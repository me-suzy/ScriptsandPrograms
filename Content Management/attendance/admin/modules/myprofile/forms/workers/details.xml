<form>
	<title>User Details</title>
	<action>index.php</action>
	<name>edit</name>
	<method>get</method>
	<width>580</width>
	<formtag>true</formtag>
	<border>true</border>
	
	<buttons>		
		<set>
			<header>true</header>
		</set>

		<return onclick="" button="return" >
			<location>{PRIVATE.FORM_PREVIOUS_PAGE}</location>
		</return>

		<save onclick="" button="edit">
			<location>index.php?mod=myprofile&sub=workers&action=edit&user_id={USER_ID}&returnurl={CURRENT_PAGE}</location>
		</save>

	</buttons>

	<redirect>index.php?mod=myprofile&sub=workers&action=details&user_id={USER_ID}</redirect>

	<fields>

		<user_id type="hidden" default="$_GET['user_id']" action="eval" />

		<user_name type="text"> 
			<title>Name</title>
		</user_name>

		<user_email type="text"> 
			<title>Email </title>
		</user_email>

		<mod type="hidden" default="$_GET[mod]" action="eval" />
		<sub type="hidden" default="$_GET[sub]" action="eval" />
		<action type="hidden" default="$_GET[action]" action="eval" />

		<section type="droplist" onchange="document.forms[0].submit();" default="$_GET[section]" action="eval" width="300">
			<title>View Section</title>
			<options>
				<option name="0">User Details</option>
				<option name="1">Administrators Notes</option>
			</options>
			<description>Select the section you want to apear bellow.</description>
		</section>


		<subtitle type="subtitle" title="Contact Info" />

		<user_address type="text" size="40"> 
			<title>Address</title>
		</user_address>

		<user_city type="text" size="20"> 
			<title>City</title>
		</user_city>

		<user_state type="text" empty="true"> 
			<title>State</title>
		</user_state>

		<user_zip type="text"> 
			<title>Zip Code</title>
		</user_zip>

		<user_country type="text"> 
			<title>Country</title>
		</user_country>

		<user_phone type="text" size="20"> 
			<title>Phone</title>
		</user_phone>

		<user_description type="text"> 
			<title>Other</title>
		</user_description>
	</fields>
</form>
