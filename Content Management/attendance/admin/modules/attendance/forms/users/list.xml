<form>
	
	<title>Users</title>
	<width>580</width>
	
	<fields>
		<_count header="No" suffix="." width="25" align="center" />
		<user_name align="left" header="Name"/>
<!--
		<reply type="button" width="20" align="center" button="ac_new" title="Send Message">
			<location>index.php?mod=myprofile&sub=myprofile.compose&user_id={USER_ID}&returnurl={CURRENT_PAGE}</location>
		</reply>
-->
		<delete type="button" width="20" align="center" button="ac_delete" title="Delete User" protected="user_protect_delete">
			<location>javascript:if(confirm('Are you sure you want to delete this record ?')) window.location='index.php?mod=attendance&sub=users&action=delete&field_id={FIELD_ID}&returnURL={CURRENT_PAGE}'</location>
		</delete>
	</fields>

	<vars>
		<user_status import="$_GET['user_status']" type="eval" />
	</vars>

	<header>
		<titles>true</titles>

		<buttons>

			<add button="addnew">
				<location>index.php?mod=attendance&sub=users2&event_id={EVENT_ID}&returnurl={CURRENT_PAGE}</location>
			</add>
		</buttons>
	</header>

	<buttons>

		<details onclick="" button="details" >
			<location>index.php?mod=myprofile&sub=workers&action=userdetails&user_id={USER_ID}&returnurl={CURRENT_PAGE}</location>
		</details>

	</buttons>
	<SQL>
		<vars>
			<sql_page type="page"/>
			<sql_items type="form" var="items" />
			<sql_table import="$this->tables['users']" type="eval"/>
			<sql_table2 import="$this->tables['events_users']" type="eval"/>
			<event import="$_GET[event_id]" type="eval" />

			<sql_condition import="WHERE user.user_id=user2.user_id AND event_id={EVENT} " type="var"/>	
		</vars>
		<query>SELECT * FROM `{SQL_TABLE}` as user, `{SQL_TABLE2}` as user2 {SQL_CONDITION} ORDER BY user_name ASC LIMIT {SQL_PAGE},{SQL_ITEMS} </query>
		<count table="{SQL_TABLE} as user, {SQL_TABLE2} as user2 " condition="{SQL_CONDITION}" />
	</SQL>

	<items>30</items>

</form>