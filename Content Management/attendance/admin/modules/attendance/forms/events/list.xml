<form>
	
	<title>Events</title>
	<width>580</width>
	<border>true</border>
	
	<fields>
		<_count header="No" suffix="." width="25" align="center" />
		<event_title align="left" header="Title"/>
		<event_public type="relation" width="50" align="center"> 
			<header>Type</header>
			<options>
				<option name="0">private</option>
				<option name="1">public</option>
			</options>
		</event_public>
		<event_date width="150" align="center" header="Date" type="date" params="F d,y g:i a"/>

		<delete type="button" width="20" align="center" button="ac_delete" title="Delete Event">
			<location>javascript:if(confirm('Are you sure you want to delete this record ?')) window.location='index.php?mod=attendance&sub=events&action=delete&event_id={EVENT_ID}&returnURL={CURRENT_PAGE}'</location>
		</delete>
	</fields>

	<vars>
		<event_status import="$_GET['event_status']" type="eval" />
	</vars>

	<header>
		<titles>true</titles>

		<buttons>

			<add button="addnew">
				<location>index.php?mod=attendance&sub=events&action=add&returnurl={CURRENT_PAGE}</location>
			</add>
		</buttons>
	</header>

	<buttons>

		<details onclick="" button="details" >
			<location>index.php?mod=attendance&sub=events&action=eventdetails&event_id={EVENT_ID}&returnurl={CURRENT_PAGE}</location>
		</details>

	</buttons>
	<items>25</items>

</form>