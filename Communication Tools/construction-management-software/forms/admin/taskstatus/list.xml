<form>
	
	<title>Task Status</title>
	<width>540</width>
	<border>true</border>
	
	<fields>
		<_count header="No" width="30" align="center" />
		<status_name header="Title" align="left" />
	</fields>

	<header>
		<titles>true</titles>
		<buttons>
			<delete onclick="" button="addnew" >
				<location>index.php?sub=taskstatus&action=add</location>
			</delete>
		</buttons>
	</header>

	<buttons>

		<delete onclick="" button="delete" >
			<location>javascript:if(confirm('Are you sure you want to delete this record ?')) window.location='index.php?sub=taskstatus&action=delete&cat_id={CAT_ID}&returnURL={CURRENT_PAGE}'</location>
		</delete>

		<details onclick="" button="edit" >
			<location>index.php?sub=taskstatus&action=edit&status_id={STATUS_ID}</location>
		</details>

	</buttons>

	<items>10</items>

</form>